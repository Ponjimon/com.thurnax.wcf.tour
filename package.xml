<?xml version="1.0" encoding="UTF-8"?>
<package name="com.thurnax.wcf.tour" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/package.xsd">
	<packageinformation>
		<packagename>Tour</packagename>
		<packagename language="de">Einführungstour</packagename>
		<packagedescription>
			<![CDATA[This plugin allows tours: show off and explain how everything works or just a single little button.]]></packagedescription>
		<packagedescription language="de">
			<![CDATA[Diese Erweiterung ermöglicht Einführungstouren: Erklären Sie die allgemeine Funktionsweise der gesamten Webseite oder auch nur einen kleinen Button.]]></packagedescription>
		<version>1.0.2</version>
		<date>2014-08-18</date>
	</packageinformation>

	<authorinformation>
		<author>Thurnax.com und Magnus Kühn</author>
		<authorurl>https://www.thurnax.com</authorurl>
	</authorinformation>

	<requiredpackages>
		<requiredpackage minversion="2.0.0">com.woltlab.wcf</requiredpackage>
	</requiredpackages>

	<instructions type="install">
		<instruction type="acpTemplate">acptemplates.tar</instruction>
		<instruction type="file">files.tar</instruction>
		<instruction type="objectType">objectType.xml</instruction>
		<instruction type="packageInstallationPlugin">packageInstallationPlugin.xml</instruction>
		<instruction type="sql">install.sql</instruction>
		<instruction type="template">templates.tar</instruction>

		<instruction type="aclOption">aclOption.xml</instruction>
		<instruction type="acpMenu">acpMenu.xml</instruction>
		<instruction type="clipboardAction">clipboardAction.xml</instruction>
		<instruction type="coreObject">coreObject.xml</instruction>
		<instruction type="eventListener">eventListener.xml</instruction>
		<instruction type="language">lang/*.xml</instruction>
		<instruction type="option">option.xml</instruction>
		<instruction type="templateListener">templateListener.xml</instruction>
		<instruction type="userGroupOption">userGroupOption.xml</instruction>
	</instructions>

	<instructions type="update" fromversion="1.0.0">
		<instruction type="acpTemplate">acptemplates.tar</instruction>
	</instructions>

	<instructions type="update" fromversion="1.0.1">
		<!-- no updates required -->
	</instructions>
</package>
